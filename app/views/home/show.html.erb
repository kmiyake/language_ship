<div class="span12">
  <div class="top">
    <h1>LanguageShip</h1>
    <h2><%= t ".description" %></h2>
    <% unless current_user %>
      <p><%= link_to t(".sign_in_with_facebook"), "/auth/facebook", id: "sign_in", class: "btn btn-large btn-primary" %></p>
    <% end %>
    <div class="users">
      <% @users.each do |user| %>
        <%= link_to "/#{user.profile_url}", class: "image-link" do %>
          <%= image_tag "https://graph.facebook.com/#{user.uid}/picture?type=small", class: "img-circle" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row howto">
    <div class="span4">
      <div class="box">
        <h3><%= t ".recruite_meeting" %></h3>
        <p><%= t ".howto_1" %></p>
      </div>
    </div>
    <div class="span4">
      <div class="box">
        <h3><%= t ".search_meeting" %></h3>
        <p><%= t ".howto_2" %></p>
      </div>
    </div>
    <div class="span4">
      <div class="box">
        <h3><%= t ".study_together" %></h3>
        <p><%= t ".howto_3" %></p>
      </div>
    </div>
  </div>
</div>
<%= content_for(:like_box) do %>
  <div class="fb-like-box" data-href="http://www.facebook.com/languageship" data-width="292" data-height="200" data-show-faces="true" data-stream="false" data-header="true"></div>
  <div id="fb-root"></div>
  <script>(function(d, s, id) {
    var js, fjs = d.getElementsByTagName(s)[0];
    if (d.getElementById(id)) return;
    js = d.createElement(s); js.id = id;
    js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=261595727301952";
    fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
<% end %>
