<%= form_for(@meeting) do |f| %>
  <% if @meeting.errors.any? %>
    <div class="alert alert-error alert-block">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <ul>
        <% @meeting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <h2><%= t page_title %></h2>
  <div class="field">
    <%= f.label :date %>
    <%= f.date_select :date, {}, class: "input-small" %>
  </div>
  <div class="field">
    <%= f.label :start_time %>
    <%= select_hour @meeting.start_hour, { :field_name => 'start_hour' }, class: "input-small" %> : 
    <%= select_minute @meeting.start_minute, { :field_name => 'start_minute', :minute_step => 15 }, class: "input-small" %>
  </div>
  <div class="field">
    <%= f.label :end_time %>
    <%= select_hour @meeting.end_hour, { :field_name => 'end_hour' }, class: "input-small" %> : 
    <%= select_minute @meeting.end_minute, { :field_name => 'end_minute', :minute_step => 15 }, class: "input-small" %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <span class="help-block">
      <%= t('location_explain').html_safe %>
    </span>
    <%= f.text_field :location, class: "input-xlarge" %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <span class="help-block">
      <%= t('address_explain').html_safe %>
    </span>
    <%= f.text_field :address, class: "input-xlarge" %>
  </div>
  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message, rows: "4", class: "span4" %>
  </div>
  <div class="field">
    <%= f.label :teach_language %>
    <%= f.select :teach_language, translation_language_options %>
  </div>
  <div class="field">
    <%= f.label :study_language %>
    <%= f.select :study_language, translation_language_options %>
  </div>
  <div class="actions">
    <%= f.submit "登録", class: "btn btn-primary" %>
  </div>
<% end %>
